<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart-item.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (products.length > 0) { %>
                    <ul>
                        <% products.forEach(p => {%>
                            <li class="cart__item">
                                <h1><%= p.productId.title %></h1>
                                <h2>Price: <%= p.productId.price %></h2>
                                <h2>Quantity: <%= p.quantity %></h2>
                                <form action="/delete-cart-item" method="POST">
                                    <input type="hidden" value="<%=p.productId._id%>" name="productId" id="productId">
                                    <button type="submit" class="btn danger">Delete</button>
                                </form>
                            </li>
                        <% }); %>
                    </ul>
                    <% } else { %>
                        <h1>No Products in the cart currently.</h1>
                    <% } %>
                    <hr>
                    <div class="centered">
                        <form action="/create-order" method="POST">
                            <button type="submit" class="btn">Order Now!</button>
                        </form>
                    </div>
            </main>
            <%- include('../includes/end.ejs') %>