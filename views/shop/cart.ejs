<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% if (products.length > 0) { %>
                    <ul>
                        <% products.forEach(p => {%>
                            <li>
                                <p><%= p.productData.title %> (<%= p.quantity %>)</p>
                                <form action="/delete-cart-item" method="POST">
                                    <input type="hidden" value="<%=p.productData.id%>" name="productId" id="productId">
                                    <button type="submit" class="btn">Delete</button>
                                </form>
                            </li>
                        <% }); %>
                    </ul>
                    <% } else { %>
                        <h1>No Products in the cart currently.</h1>
                    <% } %>
            </main>
            <%- include('../includes/end.ejs') %>